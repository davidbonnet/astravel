{
  "name": "astravel",
  "version": "0.5.0",
  "description": "ESTree-compliant AST walker and modifier.",
  "main": "./dist/astravel.js",
  "scripts": {
    "test:watch": "node --require esm node_modules/.bin/ava --no-power-assert --watch",
    "test": "eslint src/ && prettier \"src/**/*.js\" --list-different && nyc --require esm ava --no-power-assert",
    "codecov": "tap --coverage-report=lcov && codecov",
    "coverage": "tap --coverage-report=html",
    "prepublish": "npm run build && npm run build:minified",
    "build": "cross-env BABEL_ENV=production babel src --out-dir dist --source-maps=true",
    "build:minified": "cross-env BABEL_ENV=minified browserify --debug --transform [ babelify --no-sourceMaps ] --no-builtins --standalone astravel --require ./src/astravel.js:astravel | exorcist dist/astravel.min.map > dist/astravel.min.js",
    "start": "cross-env BABEL_ENV=development babel src --watch --out-dir dist --source-maps=true",
    "prettier": "prettier --print-width 80 --tab-width 2 --no-semi --single-quote --trailing-comma all --parser babylon --list-different \"src/**/*.js\" \"test/index.js\"",
    "prettify": "prettier --print-width 80 --tab-width 2 --no-semi --single-quote --trailing-comma all --parser babylon --write \"src/**/*.js\" \"test/index.js\"",
    "prepush": "npm test",
    "release": "standard-version"
  },
  "keywords": [
    "ast",
    "ast walker",
    "ast traveler",
    "ast modifier",
    "estree",
    "astring"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/davidbonnet/astravel.git"
  },
  "author": "David Bonnet <david@bonnet.cc>",
  "license": "MIT",
  "devDependencies": {
    "acorn": "^5.7.1",
    "astring": "^1.3.1",
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-minify": "^0.4.3",
    "babelify": "^8.0.0",
    "browserify": "^16.2.2",
    "codecov": "^3.0.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.6.0",
    "esm": "^3.0.52",
    "exorcist": "^1.0.1",
    "husky": "^0.14.3",
    "normalize-newline": "^3.0.0",
    "nyc": "^12.0.2",
    "prettier": "^1.13.5",
    "standard-version": "^4.4.0"
  },
  "esm": "auto",
  "ava": {
    "files": [
      "src/**/tests/*.js"
    ]
  },
  "nyc": {
    "exclude": [
      "src/**/tests/*.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "import"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "prettier"
    ],
    "env": {
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module"
    },
    "globals": {
      "__dirname": true,
      "__filename": true,
      "clearInterval": true,
      "clearTimeout": true,
      "console": true,
      "document": true,
      "global": true,
      "module": true,
      "process": true,
      "require": true,
      "window": true
    }
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true
  }
}
