{
  "name": "astravel",
  "version": "0.5.0",
  "description": "ESTree-compliant AST walker and modifier.",
  "main": "./dist/es5/astravel.js",
  "module": "./dist/module/astravel.mjs",
  "exports": {
    "import": "./dist/astravel.mjs",
    "require": "./dist/astring.js",
    "browser": "./dist/astring.min.js"
  },
  "scripts": {
    "prepare": "rm -rf dist/*; mkdir dist/import; cp src/*.js dist/import/; ls -1 dist/import/*.js | xargs -L 1 -I {} bash -c 'mv $1 \"${1%.*}.mjs\"' _ {};  babel --config-file ./babel.config.js --no-comments --source-maps --out-dir dist/es5 --ignore \"**/tests/**/*.js\" src; cross-env BABEL_MODE=module babel --config-file ./babel.config.js --no-comments --source-maps --out-dir dist/module --ignore \"**/tests/**/*.js\" src",
    "dev": "ava --watch",
    "dev:update": "ava --watch --update-snapshots",
    "test": "npm run eslint && npm run prettier:check && npm run test:coverage",
    "test:coverage": "c8 --reporter=html --reporter=text --reporter=lcov --include='src/*.js' --exclude='src/tests/**/*.js' ava",
    "eslint": "eslint src/",
    "prettier": "prettier --write \"src/*.js\" \"src/tests/*.js\" \"src/tests/helpers/*.js\"",
    "prettier:check": "prettier --list-different \"src/*.js\" \"src/tests/*.js\" \"src/tests/helpers/*.js\"",
    "prepush": "npm test",
    "release": "standard-version",
    "deploy": "git push --follow-tags origin master && npm publish",
    "release:deploy": "npm run release && npm run deploy"
  },
  "keywords": [
    "ast",
    "ast walker",
    "ast traveler",
    "ast modifier",
    "estree",
    "astring"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/davidbonnet/astravel.git"
  },
  "author": "David Bonnet <david@bonnet.cc>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/runtime": "^7.11.2",
    "astring": "^1.4.3",
    "ava": "^3.12.1",
    "c8": "^7.3.0",
    "codecov": "^3.7.2",
    "cross-env": "^7.0.2",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "esm": "^3.2.25",
    "exorcist": "^1.0.1",
    "husky": "^4.3.0",
    "meriyah": "^2.1.1",
    "normalize-newline": "^3.0.0",
    "prettier": "^2.1.2",
    "standard-version": "^4.4.0"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "ava": {
    "files": [
      "src/**/tests/*.js"
    ],
    "require": [
      "esm"
    ]
  },
  "esm": "auto"
}
